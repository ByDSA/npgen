{
  "name": "npgen",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "npm run build:clean && npm rebuild && npm test",
    "build": "tsc",
    "postbuild": "cp -r templates dist",
    "build:clean": "rm -rf dist",
    "prepublishOnly": "npm run test:coverage && npm run lint:fix && npm run build",
    "postpublish": "npm run build:clean",
    "docs": "npm run lint:fix && npm run docs:clean && typedoc",
    "postdocs": ".scripts/docs-footer.sh",
    "docs:clean": ".scripts/docs-clean.sh",
    "docs:push": ".scripts/docs-push.sh",
    "lint:eslint": "eslint ./src/*.ts index.ts",
    "lint:fix": "eslint ./src/*.ts index.ts --fix",
    "prepare": "husky install",
    "release": "standard-version",
    "postrelease": "npm run docs",
    "release:push": "git push && git push --tags && npm run docs:push",
    "readme": "npm run readme:clean && npx readme-md-generator -p .readme/template.md -y",
    "readme:clean": "rm -f README.md"
  },
  "bin": {
    "npgen": "./dist/index.js"
  },
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/ejs": "^2.6.0",
    "@types/inquirer": "^0.0.43",
    "@types/jest": "^26.0.20",
    "@types/luxon": "^1.26.2",
    "@types/node": "^10.9.4",
    "@types/shelljs": "^0.8.0",
    "@types/yargs": "^11.1.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.32",
    "typedoc-github-wiki-theme": "^0.2.0",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@octokit/auth-oauth-device": "^3.1.1",
    "@octokit/rest": "^18.5.2",
    "axios": "^0.21.1",
    "chalk": "^2.4.2",
    "dotenv": "^8.2.0",
    "ejs": "^2.6.1",
    "inquirer": "^6.2.0",
    "shelljs": "^0.8.2",
    "simple-git": "^2.37.0",
    "yargs": "^16.2.0"
  }
}